<template>
  <button
    @click="playTeaSound"
    @mouseenter="handleMouseEnter"
    @mouseleave="handleMouseLeave"
    :class="{ active: isActive }"
  >
    <svg
      v-if="isActive"
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
    >
      <!-- 茶杯 SVG 图标 -->
      <path
        d="M21 10h-2v1c0 2.97-2.16 5.43-5 5.92V19h2v2H8v-2h2v-2.08c-2.84-.49-5-2.95-5-5.92v-1H3v-2h18v2zm-9 5c2.21 0 4-1.79 4-4v-1H8v1c0 2.21 1.79 4 4 4z"
      />
    </svg>
    <span v-if="showTooltip" class="tooltip">点击来听倒茶声</span>
  </button>
</template>

<script>
export default {
  data() {
    return {
      isActive: false,
      showTooltip: false,
    };
  },
  methods: {
    handleMouseEnter() {
      this.showTooltip = true;
      // 增加动画效果
      this.$el.querySelector('svg').style.transform = 'rotate(5deg)';
    },
    handleMouseLeave() {
      this.showTooltip = false;
      this.$el.querySelector('svg').style.transform = 'rotate(0deg)';
    },
    playTeaSound() {
      this.isActive = !this.isActive;
      const audio = new Audio(require('@/assets/sounds/tea-pouring.mp3'));
      audio.play();
    },
  },
};
</script>

<style scoped>
button {
  cursor: pointer;
  position: relative;
}

.tooltip {
  position: absolute;
  top: -25px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 5px;
  border-radius: 3px;
  font-size: 12px;
  white-space: nowrap;
}

svg {
  transition: transform 0.2s;
}
</style>
